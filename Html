    <script>
        function generateBarcode() {
            var barcodeDigits = document.getElementById('barcodeInput').value.trim();
            if (barcodeDigits.length > 0) {
                var fullBarcode = '971' + barcodeDigits + '70000408';

                // Clear the existing barcode if present
                document.getElementById('barcodeOutput').innerHTML = '';

                // Generate the barcode
                JsBarcode("#barcodeOutput", fullBarcode, {
                    format: "CODE128",
                    displayValue: true,
                    fontSize: 16,
                    textMargin: 5,
                    margin: 10,
                    lineColor: "#000000"
                });

            } else {
                alert('Please enter a barcode.');
            }
        }
    </script>

